@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Vidly</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Customers" asp-action="Index">@ViewLocalizer["Customers"]</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="Index">@ViewLocalizer["Movies"]</a>
            </li>
        </ul>
        <div class="text-right">
            @await Html.PartialAsync("_SelectLanguagePartial")
        </div>
        <li class="form-inline my-2 my-lg-0">
            <button type="button" class="btn btn-secondary mr-sm-2">@ViewLocalizer["Register"]</button>
            <button type="button" class="btn btn-secondary">@ViewLocalizer["Login"]</button>
        </li>
    </div>
</nav>
