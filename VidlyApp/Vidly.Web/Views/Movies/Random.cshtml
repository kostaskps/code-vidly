@model Vidly.Web.ViewModels.RandomMovieViewModel

@{
    ViewData["Title"] = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is a comment 
    on multiple lines
*@

<h1>@Model.Movie.Name</h1>
@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
