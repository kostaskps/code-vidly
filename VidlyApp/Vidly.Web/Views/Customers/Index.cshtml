@using Microsoft.AspNetCore.Mvc.Localization

@model IEnumerable<Vidly.Web.Models.Customer>
@inject IViewLocalizer ViewLocalizer
@{
    ViewData["Title"] = ViewLocalizer["Customers"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewLocalizer["Customers"]</h1>
@if (Model.Count() == 0)
{
    <tr>
        <td>@ViewLocalizer["NoCustomers"]</td>
    </tr>
}
else
{
    <table class="table table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th>@ViewLocalizer["CustomerName"]</th>
                <th>@ViewLocalizer["MembershipType"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id })</td>
                    <td>@customer.MembershipType.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
