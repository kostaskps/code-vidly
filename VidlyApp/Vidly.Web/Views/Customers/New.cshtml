@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer

@model Vidly.Web.Models.Customer

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Customer</h1>

@using (@Html.BeginForm("Create", "Customers"))
{
<fieldset>
    <div class="form-group" style="max-width: 20rem;">
        @Html.LabelFor(c => c.Name, @ViewLocalizer["CustomerName"].Value)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>
    <div class="form-group" style="max-width: 20rem;">
        @Html.LabelFor(c => c.Birthdate, @ViewLocalizer["Birthdate"].Value)
        @Html.TextBoxFor(c => c.Birthdate, new { @class = "form-control" })
    </div>
    <div class="form-group" style="max-width: 20rem;">
        <div class="custom-control custom-checkbox">
            @Html.CheckBoxFor(c => c.IsSubscribedToNewsletter, new { @class = "custom-control-input" })
            <label class="custom-control-label" for="IsSubscribedToNewsletter">@ViewLocalizer["IsSubscribedToNewsletter"]</label>
        </div>
    </div>
</fieldset>
}